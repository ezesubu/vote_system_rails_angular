<div>
  <div class="row" ng-hide="bolNominate">
    <div class="col-md-2">
       <img class="img-responsive hidden-xs"src="images/ico-nominatios.png"/>
    </div>
    <div class="col-md-10">
       <div class="title">
          <h1 class="nominados">Nominados</h1>
       </div>
    </div>
  </div>
  <div class="row" ng-show="bolNominate">
    <div class="col-md-2">
       <img class="img-responsive hidden-xs"src="images/ico-add.png"/>
    </div>
    <div class="col-md-10">
       <div class="title">
          <h1 class="nominados">Nominar a Alguien</h1>
       </div>
    </div>
  </div>
   <div class="col-md-12 text-center" ng-show="bolNominate">
      <h1>Categoria {{category.name}}</h1>
    </div>
  <div ng-hide="bolNominate">
    <div class="row">
      <div class="col-md-4 select-category">
        <label class="control-label">Escoge la categoria</label>
          <select name="source" class="form-control input-sm"
                        ng-model="category"
                        ng-options="s.name for s in categorias track by s.id"
                        ng-class="form-control"
                        ng-click="fnGetNominates(this.category.id)">
                </select>
      </div>
      <div class="col-md-4 col-md-offset-4" >
          <button type="button" class="btn btn-info btn-nominados" ng-show="bolIsNominated" ng-click="fnshowNominate()">¿Quieres nominar a alguien?</button> 
      </div>
    </div>
  </div>
  <div class="row" ng-show="bolNominate">
    <div class="col-md-4  col-md-offset-4">
        <form ng-submit="fnSaveData()">
          <div class="row">
            <div class="col-md-12" ng-class="{'has-error' : bolRequired}">
              <input type="text" ng-model="name" class="form-control" placeholder="Nombre" />
            </div>
            <div class="col-md-12 select-category" >
              <label class="control-label">Tú identification</label>
              <input type="text" ng-model="identification" class="form-control" placeholder="Cedula" />
            </div>
            </div>
            <div class="col-md-12 select-category">
              <label class="control-label">Escoge la categoria</label>
               <select name="source" class="form-control input-sm"
                        ng-model="category"
                        ng-options="s.name for s in categorias track by s.id"
                        ng-class="form-control">
                </select>
            </div>

          </div>
          <div class="row" >
            <div class="col-md-12 text-center">
              <br />
              <input type="Submit"  value="Nominar" class="btn btn-primary btn-votar" />
            </div>
          </div>
        </form>
        <div class="row" >
            <div class="col-md-12 text-center">
            <br>
              <button  class="btn btn-primary btn-votar" ng-click="fnhideNominate()"/> Volver</button>
            </div>
        </div>
      </div>
  </div>

  <div class="row" ng-hide="bolNominate">
    <div class="col-md-12 text-center">
      <h1>Categoría {{category.name}}</h1>
    </div>
  </div>
  <div class="row" ng-hide="bolNominate">
    <div ng-repeat="nominate in nominates">
      <div class="col-md-4" ng-show="nominate.name">
        <div class="well well-nominante">
           <div class="row">
            <div class="col-xs-4">
              <img class="img-responsive" src="images/nominate.png"/>
            </div>
            <div class="col-xs-8">
              <p class="name_nominate">{{nominate.name }}</p>
              <button  class="btn btn-primary btn-votar" ng-show="bolIsNominated"  ng-click="fnAddVote(nominate.id)"/> Votar</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>